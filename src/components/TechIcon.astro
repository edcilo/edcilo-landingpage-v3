---
import Tooltip from './Tooltip.astro';
import { getTechIconSvg } from '../data/techIcons';

interface Props {
	name: string;
	size?: number;
	tooltipAlign?: 'left' | 'center' | 'right';
}

const { name, size = 20, tooltipAlign = 'center' } = Astro.props;

const svgString = getTechIconSvg(name, size);
---

<Tooltip text={name} position="top" align={tooltipAlign}>
	<span
		class="inline-flex items-center justify-center rounded-md border border-border bg-muted p-1.5 text-muted-foreground transition-colors duration-300"
		role="img"
		aria-label={name}
	>
		<Fragment set:html={svgString} />
	</span>
</Tooltip>
