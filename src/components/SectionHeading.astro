---
interface Props {
	title: string;
	subtitle?: string;
	id?: string;
}

const { title, subtitle, id } = Astro.props;
---

<div class="mb-12 text-center">
	<h2
		id={id}
		class="font-mono text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
	>
		{title}
	</h2>
	{
		subtitle && (
			<p class="mt-4 font-mono text-lg text-muted-foreground">{subtitle}</p>
		)
	}
</div>
