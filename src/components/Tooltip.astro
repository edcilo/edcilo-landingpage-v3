---
interface Props {
	text: string;
	position?: 'top' | 'bottom';
	align?: 'left' | 'center' | 'right';
}

const { text, position = 'bottom', align = 'center' } = Astro.props;

const positionClass = position === 'top' ? 'tooltip-top' : 'tooltip-bottom';
const alignClass = `tooltip-align-${align}`;
---

<div
	class:list={['tooltip-wrapper', positionClass, alignClass]}
	data-tooltip={text}
>
	<slot />
</div>

<style>
	.tooltip-wrapper {
		position: relative;
		display: inline-flex;
	}

	.tooltip-wrapper::after {
		content: attr(data-tooltip);
		position: absolute;
		font-family: var(--font-mono);
		font-size: 0.75rem;
		line-height: 1rem;
		white-space: nowrap;
		padding: 0.25rem 0.5rem;
		border-radius: 0.375rem;
		background: var(--color-foreground);
		color: var(--color-background);
		box-shadow: 0 1px 2px rgb(0 0 0 / 0.05);
		opacity: 0;
		pointer-events: none;
		transition:
			opacity 150ms ease,
			transform 150ms ease;
	}

	/* Horizontal alignment */
	.tooltip-align-center::after {
		left: 50%;
	}

	.tooltip-align-left::after {
		left: 0;
	}

	.tooltip-align-right::after {
		right: 0;
	}

	/* Bottom position (default) */
	.tooltip-bottom.tooltip-align-center::after {
		top: 100%;
		margin-top: 0.5rem;
		transform: translateX(-50%) translateY(4px);
	}

	.tooltip-bottom.tooltip-align-left::after {
		top: 100%;
		margin-top: 0.5rem;
		transform: translateY(4px);
	}

	.tooltip-bottom.tooltip-align-right::after {
		top: 100%;
		margin-top: 0.5rem;
		transform: translateY(4px);
	}

	/* Top position */
	.tooltip-top.tooltip-align-center::after {
		bottom: 100%;
		margin-bottom: 0.5rem;
		transform: translateX(-50%) translateY(-4px);
	}

	.tooltip-top.tooltip-align-left::after {
		bottom: 100%;
		margin-bottom: 0.5rem;
		transform: translateY(-4px);
	}

	.tooltip-top.tooltip-align-right::after {
		bottom: 100%;
		margin-bottom: 0.5rem;
		transform: translateY(-4px);
	}

	/* Hover / focus states */
	@media (hover: hover) {
		.tooltip-wrapper:hover::after,
		.tooltip-wrapper:has(:focus-visible)::after {
			opacity: 1;
			transition-delay: 300ms;
		}

		.tooltip-align-center:hover::after,
		.tooltip-align-center:has(:focus-visible)::after {
			transform: translateX(-50%) translateY(0);
		}

		.tooltip-align-left:hover::after,
		.tooltip-align-left:has(:focus-visible)::after {
			transform: translateY(0);
		}

		.tooltip-align-right:hover::after,
		.tooltip-align-right:has(:focus-visible)::after {
			transform: translateY(0);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.tooltip-wrapper::after {
			transition-duration: 0ms;
		}
	}
</style>
